@model IEnumerable<SubjectSelection.Models.SubjectList>

@{
    var parentList = ViewBag.parentList;
    var currentUserId = ViewBag.currentUserId;
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.Id)
                </td>
                <td class="@(currentUserId == parentList.OwnerId ? string.Empty : "hidden")">
                    <a asp-controller="Subjects" asp-action="DeleteExclusiveList" asp-route-subjectListId="@item.SubjectListId" asp-route-parentListId="@parentList.SubjectListId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
